{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "provider": {
    "opencode": {
      "options": {
        "setCacheKey": true
      }
    }
  },
   "permission": {
    "edit": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.pem": "deny",
      "*.key": "deny",
      ".ssh/*": "deny",
      ".aws/*": "deny",
      ".gcloud/*": "deny",
      "secrets.json": "deny",
      "*credentials*.json": "deny"
    },
    "bash": {
      "*": "ask",
      "git push*": "ask",
      "git commit*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git branch*": "allow",
      "git show*": "allow",
      "git add*": "allow",
      "ls*": "allow",
      "pwd": "allow",
      "which*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "mkdir*": "ask",
      "curl*": "ask",
      "wget*": "ask",
      "npm install*": "ask",
      "brew*": "ask",
      "rm -rf*": "deny",
      "rm -r *": "deny"
    }
  }
}
